<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditMoviesTwo"
    android:background="#EBFFFD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Edit Movie Details"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/title_txt_view_movie_edit_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Movie Title :"
                android:textColor="#453636"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/title_txt_edit_movie_edit_two"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColor="#716060"
                android:textSize="14sp"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/year_txt_view_movie_edit_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Year (1895 to 2021) :"
                android:textColor="#453636"
                android:textSize="14sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/year_error_msg_movie_edit_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FF0000" />

            <EditText
                android:id="@+id/year_txt_edit_movie_edit_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="#716060"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/director_txt_view_movie_edit_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Director :"
                android:textColor="#453636"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/director_txt_edit_movie_edit_two"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColor="#716060"
                android:textSize="14sp"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/actors_txt_view_movie_edit_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actors :"
                android:textColor="#453636"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/actors_txt_edit_movie_edit_two"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColor="#716060"
                android:textSize="14sp"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rating_txt_view_movie_edit_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rating (1 to 10) :"
                android:textColor="#453636"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rating_error_msg_movie_edit_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FF0000" />

        </LinearLayout>

        <RatingBar
            android:id="@+id/rating_bar_movie_edit_two"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="10"
            android:progressTint="#FFFF00"
            android:stepSize="1"
            android:isIndicator="false"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="206dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review_txt_view_movie_edit_two"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:text="Review :"
                android:textColor="#453636"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/review_txt_edit_movie_edit_two"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColor="#716060"
                android:textSize="14sp"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/fav_check_box_movie_edit_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favourite" />

        </LinearLayout>

        <Button
            android:id="@+id/save_btn_movie_edit_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            app:backgroundTint="#39A59B" />

    </LinearLayout>


</RelativeLayout>